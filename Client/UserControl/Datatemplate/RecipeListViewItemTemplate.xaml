<UserControl x:Class="Client.UserControl.Datatemplate.RecipeListViewItemTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.UserControl.Datatemplate"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="0" Fill="Blue"></Rectangle>
        <TextBlock TextWrapping="Wrap" TextTrimming="WordEllipsis" Grid.Column="1" Text="{Binding Title}"/>
        <StackPanel Grid.Column="2" Orientation="Vertical">
            <Button Grid.Column="2" Margin="10" Padding="10,5,10,5" VerticalAlignment="Center" Height="auto" Content="Open"/>
        </StackPanel>
    </Grid>
</UserControl>
